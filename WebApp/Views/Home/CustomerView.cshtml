
@{
    ViewData["Title"] = "Customer";
}
<h1>@ViewData["Title"]</h1>
@{
    Layout = Layout;
}

<!DOCTYPE html>
<html>
<head>
    <title>title</title>
</head>
<body>
<div style="height: 80vh">
    <div style="display:flex; height: 10%">
        <div style="left: 0; width: 10%; position: relative"><button style="width: 100%; height: 100%">back</button></div>
        <div style="width: 60%; position: relative; border: #0b2e13"><p>selected customer</p></div>
        <div style="width: 10%; position: relative"><button style="width: 100%; height: 100%">GDPR</button></div>
        <div style="width: 20%; position: relative"><p>status</p></div>
    </div>
    <div style="display:flex; height: 90%">
        <div style="left: 0; width: 70%; position: relative">
            <div style="height: 10%"><textarea style="height: 100%; width: 100%; resize: none">notes</textarea></div>
            <div style="display:flex; height: 45%">
                <div style="width: 33%; position: relative"><p style="position: center">upcoming tasks</p></div>
                <div style="width: 33%; position: relative"><p style="position: center">order history</p></div>
                <div style="width: 33%; position: relative"><p style="position: center">tips</p></div>
            </div>
            <div style="height: 45%">
                <select name="credit_card" style="height: 100%; width: 100%" size="100">
                    @for (var i = 0; i < 100; i++)
                    {
                        <option value="TestValue">TestValue</option>
                    }
                </select>
            </div>
        </div>
        <div style="width: 30%; position: relative">
            <p style="position: center">activity history</p>
        </div>
    </div>
</div>
</body>
</html>