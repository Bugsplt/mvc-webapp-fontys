@model CustomerDetails

@{
    ViewData["Title"] = "CreateCustomer";
}
<h1>@ViewData["Title"]</h1>
@{
    Layout = Layout;
}

<!DOCTYPE html>
<html>
<head>
    <title>New Customer</title>
</head>
<body>
@using (Html.BeginForm())
{
    <div style="height: 80vh">
        <div style="display:flex; height: 10%">
            <div style="width: 60%; position: relative; border: #0b2e13">
                <p>Create new customer</p>
            </div>
        </div>
        <div style="display:flex; height: 90%">
            <div style="left: 0; width: 70%; position: relative">
                <div style="height: 90%">
                    <div style="height: 100%; width: 100%; overflow: scroll">
                        <div style="display: flex">
                            <p>Email: </p>
                            @Html.TextBoxFor(model => model.Email)
                        </div>
                        <div style="display: flex">
                            <p>Name: </p>
                            @Html.TextBoxFor(model => model.Name)
                        </div>
                        <div style="display: flex">
                            <p>Cat name: </p>
                            @Html.TextBoxFor(model => model.CatName)
                        </div>
                        <div style="display: flex">
                            <p>Phone number: </p>
                            @Html.TextBoxFor(model => model.Phone)
                        </div>
                        <div style="display: flex">
                            <p>Country: </p>
                            @Html.TextBoxFor(model => model.Country)
                        </div>
                        <div style="display: flex">
                            <p>Language: </p>
                            @Html.TextBoxFor(model => model.Language)
                        </div>
                        <div style="display: flex">
                            <p> Insta post id: </p>
                            @Html.TextBoxFor(model => model.InstaPostId)
                        </div>
                        <div style="display: flex">
                            <p>Insta ad id: </p>
                            @Html.TextBoxFor(model => model.InstaAdId)
                        </div>
                        <div style="display: flex">
                            <p>Fb post id: </p>
                            @Html.TextBoxFor(model => model.FbPostId)
                        </div>
                        <div style="display: flex">
                            <p>Fb ad id: </p>
                            @Html.TextBoxFor(model => model.FbAdId)
                        </div>
                    </div>
                </div>
            </div>
            <div style="width: 30%; position: relative">
                <div style="height: 50%;">
                    <button type="submit">Create new Customer</button>
                </div>
            </div>

        </div>
    </div>
}
</body>
</html>